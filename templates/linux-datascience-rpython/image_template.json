{
  "type": "Microsoft.VirtualMachineImages/imageTemplates",
  "apiVersion": "2020-02-14",
  "location": "ukwest",
  "dependsOn": [],
  "tags": {
      "userIdentity": "enabled"
          },
      "identity": {
          "type": "UserAssigned",
                  "userAssignedIdentities": {
                  "<imgBuilderId>": {}
                }
              },
  "properties": {
      "buildTimeoutInMinutes" : 240,

      "vmProfile":
          {
          "vmSize": "Standard_DS2_v2",
          "osDiskSizeGB": 30
          },

      "source": {
          "type": "PlatformImage",
              "publisher": "canonical",
              "offer": "0001-com-ubuntu-server-jammy",
              "sku": "22_04-lts-gen2",
              "version": "latest"

      },
      "customize": [
        {
            "type": "File",
            "name": "VMInitScript",
            "sourceUri": "https://<scriptStorageAcc>.blob.core.windows.net/<scriptStorageAccContainer>/linux-datascience-rpython/scripts/init_vm.sh",
            "destination":"/tmp/init_vm.sh"
        },
        {
            "type": "File",
            "name": "ProfileInitScript",
            "sourceUri": "https://<scriptStorageAcc>.blob.core.windows.net/<scriptStorageAccContainer>/linux-datascience-rpython/scripts/init_user_profile.sh",
            "destination":"/tmp/init_user_profile.sh"
        },
        {
            "type": "File",
            "name": "ColordInitScript",
            "sourceUri": "https://<scriptStorageAcc>.blob.core.windows.net/<scriptStorageAccContainer>/linux-datascience-rpython/scripts/45-allow-colord.pkla",
            "destination":"/tmp/45-allow-colord.pkla"
        },
        {
            "type": "Shell",
            "name": "setupVM",
            "inline": [
                "cd /tmp",
                "chmod +x init_vm.sh",
                "sudo /tmp/init_vm.sh"
            ]
        }
      ],
      "distribute": [
        {
            "type": "SharedImage",
            "galleryImageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/galleries/<sharedImageGalName>/images/<imageDefName>",
            "runOutputName": "<runOutputName>",
            "artifactTags": {
                "source": "azureVmImageBuilder",
                "baseosimg": "ubuntu2204"
            },
            "replicationRegions": ["ukwest"],
            "storageAccountType": "Standard_LRS"
        }
      ]
  }
}
